@startuml
!define RECTANGLE class
!define ARROW ->

' Участники
actor Client
rectangle "Payment system" {
  [individuals-api]
  [person-service]
  [person DB]
}

' Связи
Client -down-> [individuals-api] : HTTP
[Keycloak] -down-> [KC DB]
[Nexus] -down-> [person-service] : HTTP
[individuals-api] -right-> [Nexus] : HTTP
[person-service] -right-> [person DB]
[Alloy] -right-> [Tempo]
[Alloy] -right-> [Loki]
[Alloy] -down-> [Prometheus]
[Alloy] -down-> "Payment system" : HTTP
[Tempo] -right-> [Grafana]
[Loki] -right-> [Grafana]
[Prometheus] -right-> [Grafana]
[individuals-api] -right-> [Keycloak] : HTTP
@enduml